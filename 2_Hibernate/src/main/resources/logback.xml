<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %highlight(%-5level) [%logger{36}] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.hibernate" level="INFO" /> <!-- Suppress excessive Hibernate logs -->
    <logger name="org.example" level="INFO" />  <!-- Replace with your base package -->

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>